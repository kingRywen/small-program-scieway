/**index.wxss**/
.wrapper {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.slide-image {
  width: 100%;
  height: 100%;
}

swiper {
  height: 344rpx;
  /*开启动画硬件加速  */
  transform: translate3d(0, 0, 0) scale(1);
  backface-visibility: hidden;
  perspective: 1000;
  display: block;
  position: relative;
  transition:all 0.15s;
}

