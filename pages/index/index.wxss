.tab_navs {
  flex: none
}
.main_wrapper {
  flex: auto; 
}
.tab_navs, .main_navs {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  padding: 40rpx 0;
  background: #fff;
  margin-bottom: 10rpx;
}

.tab_nav, .main_nav {
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  flex: auto;
}

.tab_nav image {
  width: 110rpx;
  height: 110rpx;
  margin-bottom: 20rpx;
}


.main_wrapper {
  background: #fff;
}

.main_nav image {
  width: 24rpx;
  height: 24rpx;
}

.main_navs {
  border-bottom: 1rpx solid #e0e0e0;
  padding: 0
}

.main_nav {
  flex-direction: inherit;
  font-size: 28rpx;
  font-weight: bold;
  padding: 40rpx 50rpx;
}

/* .main_nav:first-child {
  font-size: 28rpx;
  color: #fa4d4e;
} */
.main_nav.active {
  font-size: 28rpx;
  color: #fa4d4e;
}

.main_nav:first-child image {
  width: 28rpx;
  height: 28rpx;
}

.article_lists {
  display: flex;
  flex-direction: column;
  flex: auto;
}

.article_list {
  display: flex;
  flex: auto;
  padding: 20rpx 30rpx;
}

.article_list image {
  width: 140rpx;
  height: 114rpx;
}

.article_list .text {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.article_list .subtitle {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #b5b5b5;
}
.list_wrapper {
  height: 470rpx
}
.loader{
  height: 100px;
  width: 20%;
  text-align: center;
  padding: 1em;
  margin: 0 auto 1em;
  display: inline-block;
  vertical-align: top;
}
svg path,
svg rect{
  fill: #FF6700;
}
.loading {
  display: flex;
  align-items: center;
  justify-content: center
}
.loading image {
  transform: translate3d(0, 0, 0);
  backface-visibility: hidden;
  perspective: 1000;
  width: 36rpx;
  height: 36rpx;
  animation: rotate 0.8s infinite;

}
@keyframes rotate {
  from {
    transform: rotate(0)
  }
  to {
    transform: rotate(360deg)
  }
}