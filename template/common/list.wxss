.confLists {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  margin-bottom: 200rpx
}

.confList {
  box-sizing: border-box;
  background: #fff;
  line-height: 3.2;
  width: 100%;
  border-top: 1px solid #f8f8f8;
  font-size: 30rpx;
  display: block;
  padding: 0 30rpx;
  font-weight: bold
}

.confList::last-child {
  border-bottom: 1px solid #f8f8f8;
}

.title {
   margin: 40rpx 30rpx; 
  display: block;
  font-size: 26rpx;
}
.articleLists {
  display: flex;
  flex-direction: column;
  background: #fff
}
.articleList {
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  position: relative
}
.articleList::after {
  box-sizing: border-box;
  content: '';
  display: block;
  position: absolute;
  left: 4%;
  bottom: 0;
  width: 92%;
  height: 1px;
  background: #f2f4f4
}
.articleList image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle
}
.articleList .sub {
  font-size: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: bold
}
.articleList .sub .id {
  background: #148aea;
  color: #fff;
  padding: 0 10rpx;
  border-radius: 50px;
  font-size: 30rpx;
  margin-right: 20rpx
}
.articleList .info, .articleList .address, .articleList .date {
  margin-top: 24rpx
}
.articleList .address, .articleList .date {
  color: #777
}
.articleList .info .role {
  color: #148aea
}
 .articleList .date image {
   width: 32rpx;
   height: 32rpx;
   padding: 6rpx
 }
 .articleList .address image {
   width: 40rpx;
   height: 40rpx
 }