:host {
  position: absolute;
  z-index: 666;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  
}
.map_container {
  display: flex;
  flex-direction: column;
  /* position: absolute; */
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  height: 100%;
  bottom: 80rpx;
}
.map_container .info {
  display: none;
  flex-direction: column;
  padding: 60rpx;
}
.map_container .info.active {
  display: flex
}
.map_container .info .title {
  font-size: 34rpx;
  font-weight: bold;
}
.map_container .info .address {
  margin-top: 10rpx;
  font-size: 24rpx
}
.map_container .info .submit {
  width: 100%;
  background: #148aea;
  margin-top: 60rpx;
  color: #fff
}
.map{
  /* position: absolute; */
  width: 100%;
  /* height: 100%; */
  /* top: 80rpx; */
  display: none;
  flex:auto;
}
.input {

  background:#f2f4f4;
  border-radius: 100rpx;
  z-index:2222;
  flex: auto;
  padding:6rpx 30rpx;

}
.cancel {
  margin: 0;
  background:none;
  flex: none

}
.search_wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  flex:none;
}
.search_wrapper .location {
  padding: 10rpx 20rpx 10rpx 0;
}
.search_wrapper .icon_loca {
  width: 31rpx;
  height: 31rpx;
  vertical-align: -2px;
  padding-left: 20rpx;
  padding-right: 6rpx;
}
.cancel:active {
  color: #000;
  background: none;
}
.searchResultWrapper{
  position: absolute;
  display: none;
  flex-direction: column;
  top: 80rpx;
  width: 100%;
  background: #fff;
  z-index: 22222;
  height: calc(100vh - 80rpx)
}
.searchResultWrapper.active {
  display: flex
}
.searchResultWrapper .image,.searchResultWrapper image {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}
.searchResultWrapper .pos_items {
  display: flex;
   justify-content: left; 
  padding: 30rpx 30rpx 30rpx 0;
  align-items: center;
  margin-left: 30rpx;
  border-bottom: 1px solid #f2f4f4
}
.searchResultWrapper .pos_items .item {
  display: flex;
  flex-direction: column;

}
.searchResultWrapper .pos_items .item .name {
  font-size: 32rpx;
  font-weight: bold;

}

.searchResultWrapper .pos_items .item .district {
  font-size: 24rpx;
  color: #999
}
.map.active {
  display: block
}

.line {
  display: flex;
  justify-content: space-around;
  align-items: center
}
.line text {
  line-height: 3;
  flex: auto;
  text-align: center
}

.line .active {
  color: #148aea
}